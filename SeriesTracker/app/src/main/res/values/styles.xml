<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_colorAccent</item>
        <item name="android:textColor">@color/theme_textColor</item>
        <item name="android:textColorPrimary">@color/theme_textColorPrimary</item>
        <item name="android:windowBackground">@color/theme_windowBackground</item>
    </style>

    <style name="AppTheme.Base"></style>

    <!-- Episode Details -->
    <style name="AppTheme.EpisodeDetails" parent="AppTheme">
    </style>

    <style name="AppTheme.EpisodeDetails.screenshot" parent="AppTheme.EpisodeDetails">
        <item name="android:layout_height">248dp</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="AppTheme.EpisodeDetails.screenshot_overlay" parent="AppTheme.EpisodeDetails">
        <item name="android:layout_height">248dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/overlay</item>
    </style>

    <style name="AppTheme.EpisodeDetails.screenshot_title" parent="AppTheme.EpisodeDetails">
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:textSize">@dimen/default_textSize_veryLarge</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginBottom">@dimen/episode_details_title_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/episode_details_title_left_margin</item>
    </style>

    <style name="AppTheme.EpisodeDetails.cardView" parent="AppTheme.EpisodeDetails">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="AppTheme.EpisodeDetails.cardView_exhibition" parent="AppTheme.EpisodeDetails.cardView">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AppTheme.EpisodeDetails.cardView_summary" parent="AppTheme.EpisodeDetails.cardView">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppTheme.EpisodeDetails.exhibition_clock" parent="AppTheme.EpisodeDetails">
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="AppTheme.EpisodeDetails.exhibition_time" parent="AppTheme.EpisodeDetails">
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:textColor">@color/default_textColor_second</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.EpisodeDetails.summary_title" parent="AppTheme.EpisodeDetails">
        <item name="android:textColor">@color/default_textColor_third</item>
        <item name="android:textSize">@dimen/default_textSize_verySmall</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">16dip</item>
        <item name="android:layout_marginTop">16.5dip</item>
        <item name="android:layout_marginBottom">8.5dip</item>
    </style>

    <!-- Base Navigation -->
    <style name="AppTheme.Base.Navigation"></style>

    <style name="AppTheme.Base.Navigation.Toolbar">
        <item name="android:layout_height">@dimen/base_navigation_toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/base_navigation_toolbar_minHeight</item>
        <item name="android:background">@color/base_navigation_toolbar_background</item>
    </style>

    <style name="AppTheme.Base.Navigation.Toolbar.Transparent">
        <item name="android:background">@color/base_navigation_toolbar_transparent_background</item>
    </style>

    <!-- Base Loading -->
    <style name="AppTheme.Base.Loading"></style>

    <style name="AppTheme.Base.Loading.Container">
        <item name="android:background">@color/base_loading_container_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.Base.Loading.Progress">
        <item name="android:layout_width">@dimen/base_loading_progress_size</item>
        <item name="android:layout_height">@dimen/base_loading_progress_size</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>