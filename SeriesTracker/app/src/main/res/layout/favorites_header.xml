<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="160dp"
    android:background="@color/default_color_first">
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerInside"
        android:layout_height="127dp"
        android:src="@drawable/favorites_header_tv_happy" />
    <TextView
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="16dp"
        android:text="Favourited Shows"
        android:textStyle="bold"
        android:textColor="@color/default_textColor_first"
        android:id="@+id/favorite_show_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/default_textSize_medium" />
</LinearLayout>