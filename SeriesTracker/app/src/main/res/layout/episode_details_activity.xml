<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".EpisodeDetailsActivity">

    <!-- Toolbar
    <android.support.v7.widget.Toolbar
        android:id="@+id/base_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary" /> -->

    <!-- Scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Screenshot -->
            <!-- Overlay -->
            <!-- TÃ­tulo -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/screenshot_container">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/highlight_placeholder"
                android:scaleType="fitCenter"
                android:id="@+id/image_placeholder"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="fitXY"
                android:src="@drawable/overlay"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_textColor_first"
                android:textSize="@dimen/default_textSize_veryLarge"
                android:text="The House of Black and White"
                android:layout_alignBottom="@id/image_placeholder"
                android:layout_marginBottom="@dimen/episode_details_title_bottom_margin"
                android:layout_marginLeft="@dimen/episode_details_title_left_margin"
                />
            <!-- Cards -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/image_placeholder"
                app:cardCornerRadius="@dimen/default_spacing_medium"
                android:id="@+id/episode_details_time_card">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/episode_details_clock"/>
                <TextView android:text="2015-04-22 at 21:00"
                    android:layout_marginLeft="64dp"
                    android:textSize="@dimen/default_textSize_medium"
                    android:textColor="@color/default_textColor_second"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="@dimen/default_spacing_medium"
                android:layout_below="@+id/episode_details_time_card">
                <TextView android:text="SUMMARY"
                    android:id="@+id/episode_details_summary_title"
                    android:layout_width="wrap_content"
                    android:textColor="@color/default_textColor_third"
                    android:textSize="@dimen/default_textSize_verySmall"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16.5dp"
                    android:layout_marginBottom="8.5dp"
                    android:layout_height="wrap_content" />
                <View android:background="@color/default_background_third"
                    android:id="@+id/episode_details_horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true" />
                <TextView android:text="SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY SUMMARY "
                    android:id="@+id/episode_details_summary"
                    android:textColor="@color/default_textColor_fourth"
                    android:textSize="@dimen/default_textSize_medium"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="18dp"
                    android:layout_below="@+id/episode_details_horizontal_line"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
