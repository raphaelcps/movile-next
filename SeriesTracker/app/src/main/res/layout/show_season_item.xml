<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/show_season_item_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/show_season_item_image"
                android:layout_width="88dp"
                android:layout_height="128dp"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/show_season_item_title"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/default_textSize_small"
                android:textColor="@color/default_textColor_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/show_season_item_episodes"
                android:textColor="#a2a2a2"
                android:textSize="@dimen/default_textSize_verySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>